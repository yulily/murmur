---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';

const { title, description, pubDate, updatedDate, heroImage } = Astro.props.frontmatter;
const formattedPubDate = new Date(pubDate);
const formattedUpdatedDate = new Date(updatedDate);

---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
		<style>
			.title {
				font-size: 2em;
				margin: 0.25em 0 0;
			}
			hr {
				border-top: 1px solid #ddd;
				margin: 1rem 0;
			}
			.last-updated-on {
				font-style: italic;
			}
		</style>
	</head>

	<body>
		<Header />
		<main>
			<article>
				{heroImage && <img width={720} height={360} src={heroImage} alt="" />}
				<h1 class="title">{title}</h1>
				<FormattedDate date={formattedPubDate} />
				<div class="last-updated-on">
					Last updated on <FormattedDate date={formattedUpdatedDate} />
				</div>
				<hr />
				<slot />
			</article>
		</main>
		<Footer />
	</body>
</html>
